import ThemeToggle from '../components/ThemeToggle.astro';
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Tic Tac Toe â€¢ Ocean Professional</title>
    <meta name="description" content="Modern Tic Tac Toe built with Astro. Two-player local game with keyboard accessibility." />
  </head>
  <body>
    <ThemeToggle />
    <slot />
