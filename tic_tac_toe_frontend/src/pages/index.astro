---
import Layout from '../layouts/Layout.astro';
import Game from '../components/Game.astro';
---

<Layout>
  <main class="page">
    <Game />
  </main>
</Layout>

<style>
  .page {
    min-height: 100dvh;
    display: grid;
    align-content: start;
    padding-top: clamp(24px, 5vh, 60px);
    background: linear-gradient(135deg, rgba(59,130,246,0.08), rgba(249,250,251,1));
  }
</style>
